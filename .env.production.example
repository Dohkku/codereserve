# ===========================================
# CodeReserve API - Production Environment
# ===========================================
# Copy this file to .env.production and fill in the values

# CRITICAL - Server won't start without these
# Generate with: openssl rand -base64 48
JWT_SECRET=
ENCRYPTION_KEY=

# GITHUB APP
# Get from: https://github.com/settings/apps/YOUR-APP-NAME
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET=

# BLOCKCHAIN
# Private key for signing refund/slash operations (with 0x prefix)
SIGNER_PRIVATE_KEY=0x...
# Your deployed escrow contract address
CONTRACT_ADDRESS=0x...
# 8453 for Base Mainnet, 84532 for Base Sepolia
CHAIN_ID=8453
# Optional: Custom RPC URL (defaults to public Base RPC)
# RPC_URL=https://mainnet.base.org

# URLS
API_URL=https://api.codereserve.org
FRONTEND_URL=https://codereserve.org

# DATABASE
# SQLite file path (inside container, mapped to ./data volume)
DATABASE_URL=file:/app/data/codereserve.db

# ENVIRONMENT
NODE_ENV=production
PORT=3001
