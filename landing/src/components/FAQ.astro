---
import translations from '../i18n/translations.json';

interface Props {
  locale: 'en' | 'es';
}

const { locale } = Astro.props;
const t = translations[locale];
---

<section>
  <h2>{t.faq_title}</h2>
  <article>
    <h3>{t.faq_q1}</h3>
    <p>{t.faq_a1}</p>
  </article>
  <article>
    <h3>{t.faq_q2}</h3>
    <p>{t.faq_a2}</p>
  </article>
  <article>
    <h3>{t.faq_q3}</h3>
    <p>{t.faq_a3}</p>
  </article>
  <article>
    <h3>{t.faq_q4}</h3>
    <p>{t.faq_a4}</p>
  </article>
</section>
