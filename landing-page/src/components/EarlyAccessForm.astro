---
import translations from '../i18n/translations.json';

interface Props {
  locale: 'en' | 'es';
}

const { locale } = Astro.props;
const t = translations[locale];
---

<section id="access">
  <h2>Get Early Access</h2>
  
  <article>
    <h3>{t.form_maintainers_title}</h3>
    <form id="form-maintainers" class="form-handler">
      <input type="text" name="name" placeholder={t.form_name} required />
      <input type="email" name="email" placeholder={t.form_email} required />
      <input type="text" name="github" placeholder={t.form_github} required />
      <input type="url" name="repo" placeholder={t.form_repo} required />
      <input type="number" name="hours" placeholder={t.form_hours} />
      <textarea name="willingness" placeholder={t.form_willingness}></textarea>
      <textarea name="concerns" placeholder={t.form_concerns}></textarea>
      <button type="submit">{t.form_submit}</button>
    </form>
  </article>

  <article>
    <h3>{t.form_contributors_title}</h3>
    <form id="form-contributors" class="form-handler">
      <input type="text" name="name" placeholder={t.form_name} required />
      <input type="email" name="email" placeholder={t.form_email} required />
      <input type="text" name="github" placeholder={t.form_github} required />
      <input type="number" name="prs" placeholder={t.form_prs} />
      <select name="bounties">
        <option value="">{t.form_bounties}</option>
        <option value="yes">Yes</option>
        <option value="no">No</option>
      </select>
      <textarea name="motivation" placeholder={t.form_motivation}></textarea>
      <button type="submit">{t.form_submit}</button>
    </form>
  </article>

  <article>
    <h3>{t.form_enterprises_title}</h3>
    <form id="form-enterprises" class="form-handler">
      <input type="text" name="name" placeholder={t.form_name} required />
      <input type="email" name="email" placeholder={t.form_email} required />
      <input type="text" name="company" placeholder={t.form_company} required />
      <textarea name="deps" placeholder={t.form_critical_deps}></textarea>
      <input type="text" name="budget" placeholder={t.form_budget} />
      <button type="submit">{t.form_submit}</button>
    </form>
  </article>
</section>

<script>
  document.querySelectorAll('.form-handler').forEach(form => {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formType = form.id.replace('form-', '');
      const name = form.querySelector('input[name="name"]').value;
      const email = form.querySelector('input[name="email"]').value;
      
      // Collect all form data
      const data = {};
      form.querySelectorAll('input, textarea, select').forEach(field => {
        if (field.name && field.name !== 'name' && field.name !== 'email') {
          data[field.name] = field.value;
        }
      });

      try {
        const response = await fetch('/api/send-email', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ formType, name, email, data })
        });

        if (response.ok) {
          alert('âœ… You\'re in! Check your email.');
          form.reset();
        } else {
          alert('Error sending email. Please try again.');
        }
      } catch (error) {
        console.error('Form submission error:', error);
        alert('Error submitting form. Please try again.');
      }
    });
  });
</script>
