---
import translations from '../i18n/translations.json';

interface Props {
  locale: 'en' | 'es';
}

const { locale } = Astro.props;
const t = translations[locale];
---

<section>
  <h1>{t.hero_headline}</h1>
  <p>{t.hero_subline_1}</p>
  <p>{t.hero_promise}</p>
  <button>{t.hero_cta_maintainers}</button>
  <button>{t.hero_cta_contributors}</button>
</section>
